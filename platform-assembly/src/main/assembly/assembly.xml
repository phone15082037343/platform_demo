<?xml version="1.0" encoding="utf-8" ?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>assembly</id>
    <!-- 打包方式 -->
    <formats>
        <format>tar.gz</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>../platform-client-user/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../platform-dashboard/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../platform-eureka/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../platform-provider-user/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../platform-proxy/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>shell</directory>
            <includes>
                <include>*.bat</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <lineEnding>windows</lineEnding>
        </fileSet>
        <fileSet>
            <directory>shell</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <lineEnding>unix</lineEnding>
            <fileMode>775</fileMode>
        </fileSet>
    </fileSets>

    <includeBaseDirectory>false</includeBaseDirectory>

</assembly>